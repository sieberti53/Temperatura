<Window x:Class="temperatura.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Przelicznik temperatur"
        Height="220" Width="380"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBox x:Name="txtInput"
                 Grid.Row="0"
                 Height="30"
                 FontSize="16"
                 Margin="0,0,0,15"
                 ToolTip="Wpisz temperaturę w °C lub °F"/>

        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,15">
            <Button Content="Na Fahrenheity"
                    Width="140"
                    Height="35"
                    Margin="0,0,15,0"
                    Click="BtnToFahrenheit_Click"/>
            <Button Content="Na Celsjusze"
                    Width="140"
                    Height="35"
                    Click="BtnToCelsius_Click"/>
        </StackPanel>

        <TextBlock x:Name="lblResult"
                   Grid.Row="2"
                   FontSize="16"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Foreground="DarkBlue"
                   Text=""/>
    </Grid>
</Window>